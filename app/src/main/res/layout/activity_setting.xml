<!-- 설정 액티비티 레이아웃 -->
<layout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:tools = "http://schemas.android.com/tools">

	<LinearLayout
		android:layout_width = "match_parent"
		android:layout_height = "match_parent"
		android:orientation = "vertical">

		<!-- 툴바 영역 -->
		<include layout = "@layout/toolbar"/>

		<!-- 컨텐츠 영역 -->
		<LinearLayout
			android:layout_width = "match_parent"
			android:layout_height = "match_parent"
			android:gravity = "center"
			android:orientation = "vertical"
			android:paddingLeft = "@dimen/activity_horizontal_margin"
			android:paddingRight = "@dimen/activity_horizontal_margin">

			<TextView
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_gravity = "center"
				android:layout_marginTop = "5dp"
				android:text = "성별 수정"/>

			<RadioGroup
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:layout_marginTop = "5dp"
				android:checkedButton = "@+id/man"
				android:gravity = "center"
				android:orientation = "horizontal">

				<RadioButton
					android:id = "@id/man"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:layout_marginRight = "25dp"
					android:text = "남자"/>

				<RadioButton
					android:id = "@+id/woman"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:layout_marginLeft = "25dp"
					android:text = "여자"/>
			</RadioGroup>

			<TextView
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_gravity = "center"
				android:layout_marginTop = "70dp"
				android:text = "신체 정보 수정"/>

			<EditText
				android:layout_width = "200dp"
				android:layout_height = "wrap_content"
				android:layout_gravity = "center"
				android:layout_marginTop = "5dp"
				android:gravity = "right"
				android:hint = "㎝"
				android:inputType = "number"
				android:text = ""/>

			<EditText
				android:layout_width = "200dp"
				android:layout_height = "wrap_content"
				android:layout_gravity = "center"
				android:layout_marginTop = "5dp"
				android:gravity = "right"
				android:hint = "㎏"
				android:inputType = "number"
				android:text = ""/>

			<TextView
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_gravity = "center"
				android:layout_marginTop = "50dp"
				android:text = "지도 표시 형식 선택"/>

			<RadioGroup
				android:id = "@+id/radio_map_type"
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:layout_marginBottom = "20dp"
				android:layout_marginTop = "5dp"
				android:checkedButton = "@+id/btn_standard_map"
				android:gravity = "center"
				android:orientation = "horizontal">

				<RadioButton
					android:id = "@+id/btn_standard_map"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:layout_marginRight = "20dp"
					android:text = "약도 형식"/>

				<RadioButton
					android:id = "@+id/btn_satellite_map"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:text = "위성 사진"/>

				<RadioButton
					android:id = "@+id/btn_hybrid_map"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:layout_marginLeft = "20dp"
					android:text = "혼합형"/>
			</RadioGroup>
		</LinearLayout>
	</LinearLayout>
</layout>