<resources>
	<!-- 앱 테마 -->
	<style name = "AppTheme" parent = "Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name = "colorPrimary">@color/colorPrimary</item>
		<item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name = "colorAccent">@color/colorAccent</item>
	</style>

	<!-- 툴바 스타일 -->
	<style name = "ToolBarStyle" parent = "Theme.AppCompat">
		<item name = "android:textColorPrimary">@android:color/white</item>
		<item name = "android:textColorSecondary">@android:color/white</item>
		<item name = "actionMenuTextColor">@android:color/white</item>
	</style>

	<!-- 회색 버튼 스타일 -->
	<style name = "GrayButtonStyle">
		<item name = "android:background">@drawable/btn_square_flat</item>
	</style>

	<!-- 녹색 버튼 스타일 -->
	<style name = "GreenButtonStyle">
		<item name = "android:background">@drawable/btn_square_theme_flat_normal</item>
	</style>

	<!-- 이미지 버튼 스타일 -->
	<style name = "ImageButtonStyle" parent = "GrayButtonStyle">
		<item name = "android:padding">10dp</item>
		<item name = "android:scaleType">fitXY</item>
		<item name = "android:cropToPadding">true</item>
	</style>

	<style name = "AppTheme.AppBarOverlay"
	       parent = "ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name = "AppTheme.PopupOverlay"
	       parent = "ThemeOverlay.AppCompat.Light"/>
</resources>